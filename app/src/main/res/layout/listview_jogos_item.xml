<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/champion_16"
                    android:id="@+id/imageViewCampeao_Desafiador"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/textView_JogosDesafiador"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alexandre"
                    android:layout_weight="1"
                    android:id="@+id/textView_JogosDesafiador"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/imageView2Jogos"
                    />




                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="44dp"
                    android:id="@+id/imageView2Jogos"
                    android:src="@drawable/tennis_quadra"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alexandrina"
                    android:id="@+id/textView_JogosDesafiado"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/imageView2Jogos"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/champion_16"
                    android:id="@+id/imageViewCampeao_Desafiado"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/textView_JogosDesafiado"

                    />
           </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/05/2015"
                    android:id="@+id/textView_JogosData"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="10dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00"
                    android:id="@+id/textView_JogosHora"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout_resultados"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ntextview_set1"
                    android:textColor="#000000"

                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ntextview_set2"
                    android:textColor="#000000"

                    />

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ntextview_set3"
                    android:textColor="#000000"

                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

